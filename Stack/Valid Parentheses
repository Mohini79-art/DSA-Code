class Solution {
    public boolean isValid(String s) {
        boolean flag=false;
        Stack<Character>st=new Stack<>();
         for (int i = 0; i < s.length(); i++) {
            char ch = s.charAt(i);

            if (ch == '(' || ch == '[' || ch == '{') {
                st.push(ch);
            } else {
                if (st.isEmpty()) return false;

                char top = st.peek();
                if ((top == '(' && ch == ')') || 
                    (top == '[' && ch == ']') || 
                    (top == '{' && ch == '}')) {
                    st.pop();
                } else {
                    return false;
                }
            }
        }

        if (st.isEmpty()) {
            flag = true;
        }

        return flag;
    }
}
