class Solution {
    public int[] nextGreaterElements(int[] arr) {
        int res[]=new int [arr.length];
                int n = arr.length;

        for(int i=0;i<arr.length;i++){
            int nextgreater=-1;
            for(int j = i + 1; j < i + n; j++){
                if(arr[j%n]>arr[i]){
                    nextgreater=arr[j%n];
                    break;
                }
            }
            res[i]=nextgreater;
        } 
        return res;
    }
}
