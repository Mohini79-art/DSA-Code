class Solution {
    public double findMaxAverage(int[] arr, int k) {
        Double max=0.0;
        Double sum=0.0;
        Double average=0.0;
        for(int i=0;i<k;i++){
            sum+=arr[i];
        }
        average=sum/k;
        max=average;
        for(int i=k;i<arr.length;i++){
           sum+=arr[i]-arr[i-k];
           average=sum/k;
            max=Math.max(max,average);
        }
        return max;
    }
}
